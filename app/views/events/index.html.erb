<h1><%=phrase('Events_Page_Heading')%></h1>

<table>
  <thead>
    <tr>
      <th><%=phrase('Title')%></th>
      <th><%=phrase('Description')%></th>
      <th><%=phrase('Location')%></th>
      <th><%=phrase('When')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description. %></td>
        <td><%= event.location %></td>
        <td><%= event._when.strftime('%B %e %C%y at %l:%M%P ')  %></td>
        <% if can_edit_phrases? %>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path if can_edit_phrases? %>
